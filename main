  <script>
    // ====== НАСТРОЙКИ (меняй под себя) ======
    const CONFIG = {
      tokenSymbol: "TTT",
      contract: "Hs6uZKWoYaPPV9mYSpdbd1BMRhf777TpsGXXXXXXXXXXXXXXXXXXXX",
      buyUrl: "https://pump.fun/",   // сюда вставь ссылку на покупку (pump.fun / raydium / dex / агрегатор)
      xUrl: "https://x.com/",
      tgUrl: "https://t.me/",
      dexUrl: "https://dexscreener.com/"
    };

    // ====== применяем настройки ======
    const contractEl = document.getElementById("contract");
    const hintEl = document.getElementById("hint");
    const buyBtn = document.getElementById("buyBtn");
    const buySub = document.getElementById("buySub");

    const xLink = document.getElementById("xLink");
    const tgLink = document.getElementById("tgLink");
    const dexLink = document.getElementById("dexLink");

    contractEl.textContent = CONFIG.contract;
    xLink.href = CONFIG.xUrl;
    tgLink.href = CONFIG.tgUrl;
    dexLink.href = CONFIG.dexUrl;

    buyBtn.href = CONFIG.buyUrl;
    buySub.textContent = CONFIG.buyUrl && CONFIG.buyUrl !== "#"
      ? "Opens your buy page"
      : "Buy link not set — put your URL in code";

    // ====== copy contract ======
    document.getElementById("copyBtn").addEventListener("click", async () => {
      try {
        await navigator.clipboard.writeText(CONFIG.contract);
        hintEl.textContent = "Скопировано ✅";
        setTimeout(() => hintEl.textContent = "Нажми на иконку — адрес скопируется.", 1400);
      } catch (e) {
        hintEl.textContent = "Не удалось скопировать (разреши Clipboard).";
        setTimeout(() => hintEl.textContent = "Нажми на иконку — адрес скопируется.", 1800);
      }
    });
  </script>
